        }

        .img_sp {
            margin-top: 10px;
            width: 60px;
        }

        .dautich {
            width: 40px;
        }

        .tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
            text-align: center;
        }

        /* Định dạng cho nút tab */
        .tab button {
            background-color: inherit;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
        }

        /* Thêm màu nền khi hover trên nút tab */
        .tab button:hover {
            background-color: #ddd;
        }

        /* Định dạng cho tab content */
        .tabcontent {
            display: none;
            padding: 6px 12px;
            border: 1px solid #ccc;
            border-top: none;
        }

        /* Hiển thị tab content được chọn */
        .show {
            display: block;
        }

        .tablinks.active {
            background-color: #b1afaf;
            /* Đổi màu nền */
        }

        .dialog-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 20;
        }

        .dialog-content {
            margin-top: 10%;
            margin-left: auto;
            /* Đặt margin-left thành auto để canh giữa */
            margin-right: auto;
            /* Đặt margin-right thành auto để canh giữa */
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            max-width: 400px;
            text-align: center;

        }

        .dialog-buttons {
            margin-top: 2%;
        }
    </style>

</head>

